<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stacks of Wax</title>
    <link rel="icon" type="images/x-icon"
        href="https://images.unsplash.com/photo-1602848596140-33c2b48c6ade?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=15&q=15" />

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap"
        rel="stylesheet">

    <!-- fontawesome cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="styles/register.css">

</head>

<body>
    <!--  error/success message -->
    <% if (message.success) { %>
        <div class="success">
            <%= message.success %>
        </div>
        <% } else if (message.error) { %>
            <div class="error">
                <%= message.error %>
            </div>
            <% } %>
                <!-- end error/success message -->

                <!-- login -->
                <div class="main-wrapper">
                    <div class="form-row" style="display: flex;">
                        <div class="form-col-right">
                            <h2>Sign into your account</h2>
                            <form class="register-form" action="/login" method="POST">

                                <!-- Email  -->
                                <div class="form-item">
                                    <label for="email">email address</label>
                                    <div class="form-group">
                                        <span><i class="fas fa-envelope"></i></span>
                                        <input type="email" name="emailField" class="form-control" id="email"
                                            placeholder="email">
                                    </div>
                                </div>
                                <!--end Email  -->

                                <!-- password -->
                                <div class="form-item">
                                    <label for="password">password</label>
                                    <div class="form-group">
                                        <span><i class="fas fa-lock"></i></span>
                                        <input type="password" name="passwordField" class="form-control" id="password"
                                            placeholder="password">
                                    </div>
                                </div>
                                <!--end password -->

                                <!-- login button -->
                                <button type="submit" id="login-btn">Login
                                    <i class="fas fa-long-arrow-alt-right"></i>
                                </button>
                                <!--end login button -->

                                <div class="text-center">
                                    <p>Not a member? <a href="/register">Register</a></p>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <!--end login-->
                <script src="js_functions/message.js" type="text/javascript"></script>
</body>

</html>